@import '../mine/mine.wxss';

.addr-info{
    width: 100%;
    display: flex;
    flex-direction: column; /**竖向排列**/
    position: relative;
}
.addr-info text{
    padding: 5rpx 30rpx;
}
.order-list{
    margin-top: 30rpx;
}
.order-detail .refund-btn{
    margin: 0;
    padding: 0;
    width: 120rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 14px;
    position: absolute;
    right: 0;
    top: 50rpx;
}
.order-fare{
    width: 100%;
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: flex-end; /**末尾**/
}
.order-all{
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    padding: 20rpx 0;
}
.order-time{
    width: 100%;
}
.order-time view{
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    padding: 10rpx 30rpx;
}
.menu-bar{
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
}