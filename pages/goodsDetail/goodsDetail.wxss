.carousel{
  width: 100%;
  height: 500rpx;
}
swiper{
  height: 100%; /**默认150px**/
}
.carousel-image{
  width: 100%;
}
.goods-info{
    width: calc(100% - 60rpx);
    padding: 20rpx 30rpx;
}
.goods-name{
    font-size: 38rpx;
    line-height: 10rpx;
}
.goods-price{
    font-size:30rpx;
    color: #f44336;
    display: block;
    margin: 10rpx 0;
}
.goods-tag{
    color: #aaa;
}
.choose-type{
    width: calc(100% - 60rpx);
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    align-items: center; /**居中**/
    margin:20rpx auto;
    position: relative;
}
.goods-pic{
    position: absolute;
    top:-20rpx;
    left:20rpx;
}
.goods-pic image{
    width: 200rpx;
    height: 230rpx;
    border:1px solid #e5e5e5;
}
.goods-stock{
    height: 160rpx;
    display: flex;
    flex-direction: column; /**竖向排列**/
    justify-content: space-around; /**撑开居中**/
    margin-left: 250rpx;
    margin-bottom: 60rpx;
}
.type-item{
    width: 100%;
    margin: 30rpx 0;
}
.type-content{
    display: flex;
    flex-direction: row; /**横向排列**/
    margin-top: 20rpx;
}
.type-content text{
    padding:5rpx 20rpx;
    border: 1px solid #e5e5e5;
    margin-right: 30rpx;
}
.type-content text.choosed{
    background: #f44336;
    color: #fff;
}
.choose-detail .choose-number{
    margin-bottom: 160rpx;
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
}
.goods-num{
    display: flex;
    flex-direction: row; /**横向排列**/
    align-items: center; /**居中**/
}
.goods-num .number{
    margin: 0 40rpx;
}
.choose-detail button{
    width: 100%;
    position: absolute;
    bottom: 0;
    left:0;
    border-radius: 0;
}
.goods-detail{
    width: 100%;
}
.goods-detail .nav{
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
}
.goods-detail .nav-item{
    color: #666;
}
.goods-detail .nav-item-active{
    color: #f44336;
    border-bottom: 2px solid;
}
.goods-detail .content{
    padding: 30rpx;
}
.menu-bar{
    width: 100%;
    height: 60px;
    line-height: 60px;
    text-align: center;
    color: #fff;
    position: fixed;
    bottom: 0;
    display: flex;  
}
.menu-bar view{
    width: 15%;
}
.menu-bar image{
    width: 50rpx;
    height: 50rpx;   
    margin-top: 30rpx;
}
.menu-bar .deep-blue-bg{
    width: 40%;
    background: #263238;
}
.menu-bar .red-bg{
    width: 30%;
    background: #f44336;
}