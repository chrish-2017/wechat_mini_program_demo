/**index.wxss**/
.carousel{
  width: 100%;
  height: 400rpx;
}
swiper{
  height: 100%; /**默认150px**/
}
.carousel-image{
  width: 100%;
}
.category{
  width: 100%;
  display: flex;
  flex-direction: row; /**横向排列**/
  flex-wrap: wrap; /**换行**/
}
.category-item{
  width: 21%;
  margin: 2%;
  display: flex;
  flex-direction: column; /**竖向排列**/
  align-items: center; /**居中**/
}
.category-item image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.goods-list{
  width: 100%;
  display: flex;
  flex-direction: row; /**横向排列**/
  flex-wrap: wrap; /**换行**/
}
.goods-item{
  width: 46%;
  padding: 2%;
}
.goods-item image{
  width: 100%;
  height: 350rpx;
}

.goods-item .goods-des{
  display: flex;
  flex-direction: row; /**横向排列**/
  justify-content: space-between; /**撑开**/
}