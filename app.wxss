/**app.wxss**/
page{
  background: #eee;
  font-size: 12px;
  font-family: "Microsoft YaHei"
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.checkbox-icon, .checkbox-icon image, .del-icon, .minus-icon, .add-icon, .edit-icon{
    width: 45rpx;
    height: 45rpx;
    margin-right: 10rpx;
}
.right-icon, .drop-icon, .scan-icon{
    width: 40rpx;
    height: 40rpx;
}
.close-icon{
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    top:20rpx;
    right: 20rpx;
}
.choose-detail{
    background: #fff;
    padding: 20rpx;
    width: calc(100% - 40rpx);
    position: fixed;
    bottom: -400px;
    left: 0;
    z-index:2;
    border-top:1px solid #e5e5e5;
}
.choose-detail-shadow{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
    opacity: 0;
}
.border-bottom{
    border-bottom: 1px solid #eee;
}
