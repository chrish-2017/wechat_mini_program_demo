.category{
  width: 100%;
}
.category-item{
  display: flex;
  flex-direction: row; /**横向排列**/
  justify-content: space-between; /**撑开**/
  align-items: center; /**居中**/
  margin: 5% 10%;
}
.category-item .des{
    width: 50%;
    display: flex;
    flex-direction: column; /**竖向排列**/
    align-items: center; /**居中**/
    font-size: 38rpx;
    line-height: 100rpx;
}
.border-bottom{
  border-bottom: 4rpx solid #000;
}
.category-item image{
  width: 50%;
  height: 200rpx;
}