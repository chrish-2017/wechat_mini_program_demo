@import '../mine/mine.wxss';

.addr-info{
    width: calc(100% - 60rpx);
    background: #fff;
    border-top: 1px solid #eee;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    align-items: center; /**居中**/
}
.order-fare{
    width: calc(100% - 60rpx);
    background: #fff;
    display: flex;
    flex-direction: column; /**竖向排列**/
    align-items: flex-end; /**末尾**/
    padding: 20rpx 30rpx;
}
.bold{
    font-weight: bold;
}
.red{
    color: #f00;
}
.small{
    font-size: 20rpx;
}
.order-time{
    width: calc(100% - 60rpx);
    background: #fff;
    display: flex;
    flex-direction: row; /**横向排列**/
    justify-content: space-between; /**撑开**/
    padding: 20rpx 30rpx;
    margin-top: 20rpx;
}
.menu-bar{
    padding:10rpx 30rpx;
    margin-bottom:10rpx;
}
.bottom-bar{
    width: calc(100% - 60rpx);
    position: absolute;
    bottom: 0;
    margin-bottom: 0;
}
.goods-name{
    width:calc(100% - 120rpx);
}