/* pages/test/test.wxss */

page{
    background: #eee;
}
.msg-text{
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}
.msg-text .logo{
    width: 60rpx;
    height: 60rpx;
    background: #fff;
    padding: 5rpx; 
    margin-left: 10rpx;
}
.msg-text .msg{
    width: 70%;
    background: #fff;
    padding: 20rpx;
    margin-left: 20rpx;
    border-radius: 5px;
    border: 1px solid #ddd;
    position: relative;
}
.msg-text .trangle{
    width:0;
    height:0;
    border-width:10rpx;
    border-style:solid;
    border-color:transparent #fff transparent transparent;
    position: absolute;
    left: -20rpx;
    top: 30rpx;
}
.msg-url{
    width: 85%;
    margin: 0 auto;
    margin-top: 20rpx;
    background: #fff;
    padding: 40rpx 30rpx 30rpx;
    border-radius: 2px;
    border: 1px solid #ddd;
}
.msg-url .title{
    font-size: 18px;
}
.msg-url .date{
    font-size: 12px;
    color: #999;
}
.msg-url .detail{
    margin: 50rpx 0;
}
.msg-url .blue{
    color: #191970;
}
.msg-url .border-bottom{
    border-bottom: 1px solid #ddd;
    padding-bottom: 30rpx;
    margin-bottom: 30rpx;
}
.menu-bar{
    width: 100%;
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0;
    background: #fff;
    border: 1px solid #ddd;
    height: 100rpx;
    line-height: 100rpx;
}
.menu-bar view{
    width: 100%;
    text-align: center;
}
.menu-bar .border-right{
    border-right: 1px solid #ddd;
    width: 0;
}